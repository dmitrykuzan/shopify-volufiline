  background-color: #e5e5e5;
  border-radius: 1.5rem;
  width: 100%;
  height: 300px;
}

@media screen and (min-width: 990px) {
  .banner-with-title__wrapper.no-image-layout {
    flex-direction: row;
    align-items: stretch;
  }

  .banner-with-title__gray-placeholder {
    flex: 1;
    height: auto;
    min-height: 420px;
  }

  .banner-with-title__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 4rem;
