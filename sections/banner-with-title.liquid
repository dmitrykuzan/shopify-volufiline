{{ 'banner-with-title.css' | asset_url | stylesheet_tag }}
{% assign product = all_products.volufiline %}

<section class="banner-with-title">
  <div class="banner-with-title__title-top-wrapper">
    <div class="banner-with-title__title-top-ticker">
      <span class="banner-with-title__title-top banner-with-title__title-top-1">Volume you deserve</span>
      <span class="banner-with-title__title-top banner-with-title__title-top-1">Volume you deserve</span>
      <span class="banner-with-title__title-top banner-with-title__title-top-2">Volume you deserve</span>
      <span class="banner-with-title__title-top banner-with-title__title-top-2">Volume you deserve</span>
    </div>
  </div>

  <div class="page-width">
    <div class="banner-with-title__wrapper" style="display: flex; flex-wrap: wrap; gap: 3rem;">
      <!-- Product Embed -->
      <div style="flex: 1 1 100%; max-width: 100%; display: flex; flex-direction: column; align-items: center; text-align: center;" class="product-embed">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}" style="width: 100%; max-width: 400px; border-radius: 1rem;" />
        </a>
        <h3 style="margin: 1.5rem 0 0.5rem;">{{ product.title }}</h3>
        <p style="font-size: 1.6rem; font-weight: bold; margin-bottom: 1.5rem;">
          {{ product.price | money }}
        </p>
        <form method="post" action="/cart/add">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          <button type="submit" class="button" style="min-width: 12rem;">Add to Cart</button>
        </form>
      </div>

      <!-- Text Content -->
      <div class="banner-with-title__content" style="flex: 1 1 100%; max-width: 100%; text-align: center;">
        <div class="banner-with-title__text">
          <h2>Looking for real volume?</h2>
          <p>
            Our 100% pure Volufiline visibly plumps and restores fullness by stimulating fat cell volumeâ€”naturally
            lifting areas like undereyes, cheeks, and smile lines.
          </p>
        </div>

        <a class="banner-with-title__link" href="{{ product.url }}">Shop now</a>
      </div>
    </div>
  </div>
</section>

<style>
@media screen and (min-width: 750px) {
  .banner-with-title__wrapper {
    flex-wrap: nowrap !important;
    text-align: left !important;
  }

  .product-embed {
    align-items: flex-start !important;
    text-align: left !important;
    max-width: 50% !important;
  }

  .banner-with-title__content {
    max-width: 50% !important;
  }
}
</style>

