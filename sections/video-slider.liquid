{{ 'video-slider.css' | asset_url | stylesheet_tag }}

<section class="video-slider page-width" id="VideoSlider{{ section.id }}">
  <div class="video-slider__titles">
    <h2>Unveil your glow with Volufiline</h2>
    <div class="video-slider__titles-stars">
      <p>Rated 4.6 out 5 stars</p>
      <div class="video-slider__text-star">
        <div class="volufiline-rating-stars">
          {% for i in (1..5) %}
            <span class="volufiline-rating-star">
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 122.88 117.1">
                <path fill="#FFC107" class="cls-1" d="M64.42,2,80.13,38.7,120,42.26a3.2,3.2,0,0,1,1.82,5.62h0L91.64,74.18l8.9,39A3.19,3.19,0,0,1,98.12,117a3.27,3.27,0,0,1-2.46-.46L61.41,96.1,27.07,116.64a3.18,3.18,0,0,1-4.38-1.09,3.14,3.14,0,0,1-.37-2.38h0l8.91-39L1.09,47.88a3.24,3.24,0,0,1-.32-4.52,3.32,3.32,0,0,1,2.29-1l39.72-3.56L58.49,2a3.24,3.24,0,0,1,5.93,0Z"/>
              </svg>
            </span>
          {% endfor %}
        </div>
        <span class="video-slider__counter">1,489</span>
      </div>
    </div>
    <p class="video-slider__subtitle">Weâ€™ve helped 50,000+ customers achieve their skin goals.</p>
  </div>

  <div class="video-slider__wrapper">
    <div class="swiper video-slider__swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <div class="video-slider__slide">
              <video
                id="custom-video"
                class="video-slider__video"
                playsinline
                preload="auto"
                poster="{{ block.settings.poster_url }}"
              >
                <source src="{{ block.settings.video_url  }}" type="video/mp4">
              </video>
              <button class="video-slider__slide-button" aria-label="Play video">
                <img src="{{ 'play-button.png' | asset_url }}" width="80" height="80" alt="Play Button">
              </button>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiperBeforeAfter = new Swiper('.video-slider__swiper', {
      spaceBetween: 2,
      slidesPerView: 1.2,
      centeredSlides: true,
      initialSlide: 1,
      breakpoints: {
        575: { spaceBetween: 10, slidesPerView: 2 },
        767: { spaceBetween: 10, slidesPerView: 3 },
        992: { slidesPerView: 3, centeredSlides: true }
      }
    });

    const wrappers = document.querySelectorAll(".video-slider__slide");
    wrappers.forEach(function (wrapper) {
      const video = wrapper.querySelector("video");
      const button = wrapper.querySelector(".video-slider__slide-button");

      button.addEventListener("click", function () {
        if (video.paused || video.ended) {
          video.play();
        } else {
          video.pause();
        }
      });

      video.addEventListener("play", () => button.classList.add("playing"));
      video.addEventListener("pause", () => button.classList.remove("playing"));
      video.addEventListener("ended", () => button.classList.remove("playing"));
    });
  });
</script>

